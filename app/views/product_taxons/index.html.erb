<p id="notice"><%= notice %></p>

<h1>Product Taxons</h1>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Taxon</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_taxons.each do |product_taxon| %>
      <tr>
        <td><%= product_taxon.product_id %></td>
        <td><%= product_taxon.taxon_id %></td>
        <td><%= link_to 'Show', product_taxon %></td>
        <td><%= link_to 'Edit', edit_product_taxon_path(product_taxon) %></td>
        <td><%= link_to 'Destroy', product_taxon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

