<p id="notice"><%= notice %></p>

<h1>Product Option Types</h1>

<table>
  <thead>
    <tr>
      <th>Option type</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_option_types.each do |product_option_type| %>
      <tr>
        <td><%= product_option_type.option_type_id %></td>
        <td><%= product_option_type.product %></td>
        <td><%= link_to 'Show', product_option_type %></td>
        <td><%= link_to 'Edit', edit_product_option_type_path(product_option_type) %></td>
        <td><%= link_to 'Destroy', product_option_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

