<p id="notice"><%= notice %></p>

<h1>Taxons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @taxons.each do |taxon| %>
      <tr>
        <td><%= taxon.name %></td>
        <td><%= link_to 'Show', taxon %></td>
        <td><%= link_to 'Edit', edit_taxon_path(taxon) %></td>
        <td><%= link_to 'Destroy', taxon, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Taxon', new_taxon_path %>
