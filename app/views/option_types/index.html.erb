<p id="notice"><%= notice %></p>

<h1>Option Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Value</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @option_types.each do |option_type| %>
      <tr>
        <td><%= option_type.name %></td>
        <td><%= option_type.value %></td>
        <td><%= link_to 'Show', option_type %></td>
        <td><%= link_to 'Edit', edit_option_type_path(option_type) %></td>
        <td><%= link_to 'Destroy', option_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

